extends ../templates/layout

block content
    div#report
        h2 Poll report
        h3= poll.title
        each question in poll.questions
            if question.type != 'sa'
                h4= question.title
                table
                    each option in question.options
                        tr
                            td
                                div= option.title
                            td
                                div= option.responses
                    tr
                        td
                            div Total responses
                        td
                            div= poll.totalResponses
