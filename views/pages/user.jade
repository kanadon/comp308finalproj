extends ../layout

block content
    h2 My Account
    div= message
    form(action='/user/account' class='pure-form pure-form-stacked' method='post')
        input(disabled type='text' value=user.username)
        input(id='email' name='email' placeholder='Email' required type='email' value=user.email)
        input(id='password' name='password' placeholder='Password' required type='password' value=user.password)
        button(class='pure-button pure-button-primary' id='submit' type='submit') Save changes