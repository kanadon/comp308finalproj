body
  //padding: 50px
  font: 14px "Lucida Grande", Helvetica, Arial, sans-serif
a
  color: #00B7FF

#wrapper
  margin: 0 auto
  max-width: 960px
  text-align: center

//.menu


.company-logo
  width: 86px
  img
    width: 100%
    
.company-logo:hover
  background-color: transparent
  cursor: pointer

form.pure-form.pure-form-stacked
  input, select, textarea
    margin: 10px auto
    width: 300px

//table.pure-table
//  margin: 10px auto 20px auto

form.pure-form.pure-form-stacked.poll
  input, textarea
    margin-right: 10px
    width: auto

textarea
  min-height: 150px
  resize: vertical

.poll
  label:hover
    cursor: pointer

table
  margin: 10px auto 20px auto
  td
    text-align: left

table.poll-report-table
  td:last-of-type
    text-align: right

table.poll-table tr:hover, table.poll-table input:hover
  cursor: pointer

.button-delete
  background-color: rgb(202, 60, 60)
.button-delete:hover
  background-image: linear-gradient(transparent,rgba(0,0,0,.05) 40%,rgba(0,0,0,.1))

.button-report, .button-live
  background-color: rgb(66, 184, 221)
.button-report:hover, .button-live:hover
  background-image: linear-gradient(transparent,rgba(0,0,0,.05) 40%,rgba(0,0,0,.1))



// Mobile styling

@media(max-width: 600px)
  form
    width: 100%

  form.pure-form.pure-form-stacked.create-poll-form
    input, select, textarea
      width: 90%
  table.polls-table, table.poll-info
    width: 90%